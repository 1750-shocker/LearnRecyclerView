<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RealRecyclerViewActivity">

    <!-- 标题栏 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="真正的 RecyclerView ItemDecoration Demo"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="#2196F3"
        android:textColor="@android:color/white"
        android:gravity="center" />

    <!-- 数据操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_add_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="添加Item"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_remove_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="删除Item"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- ItemDecoration效果按钮 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ItemDecoration 效果展示："
        android:textStyle="bold"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#E3F2FD" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="分割线"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="网格边框"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="阴影效果"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_sticky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="分组标题"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_spacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="智能间距"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="交替背景"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="清除装饰"
                android:textSize="10sp"
                android:backgroundTint="#FF5722" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- 当前效果显示 -->
    <TextView
        android:id="@+id/tv_current_decoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前效果：分割线"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#FFF3E0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/real_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FAFAFA" />

</LinearLayout>